<div class="card">
    <div class="card-content">
        <p class="title">
            <%= form_tag genre_search_path, method: :post do %>
                <div class="field">
                    <div class="control">
                        <%= text_field_tag :search, nil, placeholder: "search genre/styles", class: "input" %>
                    </div>
                </div>
                <%= submit_tag "Search", class: "button is-primary" %>
            <% end %>
        </p>
    </div>
</div>