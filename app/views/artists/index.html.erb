<section class="hero is-small is-dark">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                ARTISTS
            </h1>
            <h2 class="subtitle is-6">
            
            </h2>
        </div>
    </div>
</section>

<%= render partial: "shared/search_artist_song" %>

<h3><%= link_to "Create an artist account", new_artist_path %></h3>

<hr>

<table>
    <tr>
        <th>ARTISTS</th>
        <th></th>
    </tr>
    <% @artists.each do |artist| %>
    <tr>
        <td>
            <% if artist.image.attached? %>
                <%= image_tag artist.image, width: 50  %>
            <% end %>
        </td>
        <td><%= link_to artist.name, artist_path(artist) %></td>
    </tr>
<% end %>
</table>