<%= form_with model: @artist, local: true do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description, size: '50x10' %>
    </div>
    <div>
        <%= f.label :website %>
        <%= f.text_field :website %>
    </div>
    <div>
        <%= f.label :image %>
        <%= f.file_field :image, accept: "image/png, image/jpg, image/jpeg" %> png/jpg/jpeg files only
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div>
        <%= f.submit %>
    </div>
<% end %>