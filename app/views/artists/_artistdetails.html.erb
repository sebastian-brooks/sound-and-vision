<%= form_with model: @artist, local: true do |f| %>
    <div>
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input" %>
    </div>
    <div>
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input" %>
    </div>
    <div>
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, class: "textarea", rows: 3 %>
    </div>
    <div>
        <%= f.label :website, class: "label" %>
        <%= f.url_field :website, class: "input" %>
    </div>
    <div>
        <%= f.label :image, class: "label" %>
        <%= f.file_field :image, accept: "image/png, image/jpg, image/jpeg", class: "button is-ghost" %>
        <p class="help is-black">
            png/jpg/jpeg files only
        </p>
    </div><br />
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div>
        <%= f.submit "Create Artist", class: "button is-link" %>
    </div>
<% end %>