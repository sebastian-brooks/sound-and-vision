<section class="hero is-small is-dark">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                SEARCH GENRES // STYLES
            </h1>
            <h2 class="subtitle is-6">
            
            </h2>
        </div>
    </div>
</section>

<div><%= render partial: "shared/search_genre" %></div>

<h3>Genre Results for "<%= @parameter %>"</h3>

<% @results.each do |genre| %>
    <p><%= genre.name %></p>
<% end %>

<% @genre_songs.each do |genre| %>
    <h3><%= genre.name %> songs:</h3>
    <% genre.songs.each do |song| %>
        <p><%= link_to song.name, song_path(song) %></p>
    <% end %>
<% end %>
