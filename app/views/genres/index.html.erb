<h1>GENRES</h1>
<h3><%= link_to "Add genre", new_genre_path %></h3>
<hr>
<table>
    <tr>
        <th>Genre</th>
    </tr>
    <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %> (<%= link_to "Edit", edit_genre_path(genre) %> | <%= link_to "Delete", genre_path(genre), method: :delete, data: { confirm: "Are you sure?" } %>)</td>
        </tr>
    <% end %>
</table>